@model Galery.Server.DAL.Models.User

@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Confirm email</title>
	<style>
		* {
			margin: 0%;
		}

		header {
			background: rgb(103, 58, 183);
			color: white;
			vertical-align: -webkit-baseline-middle;
			padding: 10px;
			font-size: 16pt;
		}

			header h2 {
				margin: 0 auto;
				width: 100px;
			}

		.userdata {
			margin: 30px;
			text-align: center;
			font-family: Verdana, Geneva, Tahoma, sans-serif;
		}

